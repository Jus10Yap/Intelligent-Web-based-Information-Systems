html(lang="en")
    head   
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="/css/styles.css")
        title Products
    body
    include ./header

    div#list
        h1 All Orders
        if(orders.length)
            each order in orders
                div.product-item
                    a(class='product' href="/orders/:" + order._id) Order Number #{order._id} by #{order.customerName}
                    br
        else
            a(class='product') No orders found
        
                